{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Vite Debug (Log level info)",
			"request": "launch",
			"runtimeArgs": ["run", "dev:info"],
			"runtimeExecutable": "npm",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		},
		{
			"name": "Server",
			"request": "launch",
			"runtimeArgs": ["run", "dev", "--", "--open"],
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "npm",
			"type": "node"
		},
		{
			"name": "Mobile server",
			"request": "launch",
			"runtimeArgs": ["run", "dev", "--", "--host", "0.0.0.0"],
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "npm",
			"type": "node"
		},
		{
			"name": "Firebase Emulators",
			"request": "launch",
			"runtimeArgs": ["emulators:start", "--only", "auth,firestore"],
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "firebase",
			"type": "node"
		},
		{
			"name": "Client",
			"type": "chrome",
			"request": "launch",
			"url": "http://127.0.0.1:5173",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "Server/Client",
			"configurations": ["Server", "Client"]
		},
		{
			"name": "Mobile Development (Server + Firebase)",
			"configurations": ["Mobile server", "Firebase Emulators"]
		}
	]
}
